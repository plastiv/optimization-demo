<Window x:Class="Optimization.VisualApplication.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
    Title="Optimization Methods — Visual Demo App"
    Icon="{x:Static d3:D3IconHelper.DynamicDataDisplayWhiteIcon}" WindowState="Maximized">

  <DockPanel Name="myGrid">
    <Menu DockPanel.Dock="Top" Background="White" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="DarkGray" IsMainMenu="True">
      <MenuItem Header="_Function" >
        <MenuItem Header="_New" Command="New"/>
        <MenuItem Header="_Open" Command="Open"/>
        <MenuItem Header="_Save" Command="Save"/>
      </MenuItem>
      <MenuItem Header="_Edit">
        <MenuItem Header="_Save Picture" Click="InDevelope_Click"/>
      </MenuItem>
      <MenuItem Header="_Settings" >
        <MenuItem Header="_Isoline" Click="InDevelope_Click"/>
      </MenuItem>
      <MenuItem Header="_Help" >
        <MenuItem Header="_About" Click="InDevelope_Click"/>
      </MenuItem>
    </Menu>

    <WrapPanel DockPanel.Dock="Top">
      <ComboBox Name="cmbFunctions" SelectionChanged="cmbFunctions_SelectionChanged" SelectedIndex="1"/>
      <ComboBox Name="cmbMethods" SelectedIndex="1"/>
      <TextBox Name="txtX1">4</TextBox>
      <TextBox Name="txtX2" >4</TextBox>
      <Button Name="btnAddLine" Padding="3" Click="btnAddLine_Click">Add Line</Button>
      <Button Name="btnForward" Padding="3" Click="btnForward_Click">Step forward</Button>
      <Button Name="btnReset" Padding="3" Click="btnReset_Click">Reset step</Button>
      <Button Name="btnBack" Padding="3" Click="btnBack_Click">Step back</Button>
      <Button Name="btnRemoveLine"  Padding="3" Click="btnRemove_Click">Remove Line</Button>
    </WrapPanel>

    <StackPanel DockPanel.Dock="Right">
      <CheckBox Name="chkTrackingGraph" Click="chkTrackingGraph_Click" Height="16" Width="120">Tracking Graph</CheckBox>
      <CheckBox Name="chkCursorCoordinateGraph" Click="chkCursorCoordinateGraph_Click" Height="16" Width="120">Cursor Coordinate Graph</CheckBox>
    </StackPanel>

    <TextBox DockPanel.Dock="Top" Name="txtFunction" IsReadOnly="True"></TextBox>

    <StatusBar DockPanel.Dock="Bottom" Name="statusBar1">
      <Label Name="lblStatus">Status</Label>
      <Separator/>
      <ProgressBar HorizontalAlignment="Right" Value="55"> </ProgressBar>
    </StatusBar>

    <TabControl>
      <TabItem Header="tabItem1" Name="tabItem1">
        <d3:ChartPlotter Name="plotter">
          <d3:IsolineGraph Name="isolineGraph"/>
        </d3:ChartPlotter>
      </TabItem>
      <TabItem Header="Report" Name="tabItemListView">
        <ListView Name="listView"/>
      </TabItem>
    </TabControl>

  </DockPanel>
</Window>
